<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InputViewActivity"
    android:padding="16dp">

    <!-- Input for Doctor's Seen -->
    <EditText
        android:id="@+id/editTextDoctorSeen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/doctor_seen_hint"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <!-- Input for Diagnosis -->
    <EditText
        android:id="@+id/editTextDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/diagnosis_hint"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:padding="10dp" />

    <!-- Input for Next Appointment -->
    <EditText
        android:id="@+id/editTextNextAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/next_appointment_hint"
        android:inputType="text"
        android:padding="10dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button_label"
        android:padding="10dp"
        android:layout_marginTop="20dp" />
</LinearLayout>

